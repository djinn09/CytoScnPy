{
  "name": "cytoscnpy",
  "publisher": "djinn09",
  "displayName": "CytoScnPy",
  "description": "Python static analyzer with MCP server for GitHub Copilot. Real-time dead code detection, security scanning, and code quality metrics.",
  "version": "0.1.7",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/djinn09/CytoScnPy"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/djinn09/CytoScnPy/issues"
  },
  "homepage": "https://github.com/djinn09/CytoScnPy#readme",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "AI",
    "Chat",
    "Other"
  ],
  "keywords": [
    "python",
    "mcp",
    "copilot",
    "agent",
    "static-analysis",
    "dead-code",
    "security",
    "linter",
    "code-quality"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cytoscnpy.analyzeCurrentFile",
        "title": "CytoScnPy: Analyze Current File"
      },
      {
        "command": "cytoscnpy.analyzeWorkspace",
        "title": "CytoScnPy: Analyze Workspace"
      },
      {
        "command": "cytoscnpy.complexity",
        "title": "CytoScnPy: Calculate Cyclomatic Complexity (cc)"
      },
      {
        "command": "cytoscnpy.halstead",
        "title": "CytoScnPy: Calculate Halstead Metrics (hal)"
      },
      {
        "command": "cytoscnpy.maintainability",
        "title": "CytoScnPy: Calculate Maintainability Index (mi)"
      },
      {
        "command": "cytoscnpy.rawMetrics",
        "title": "CytoScnPy: Calculate Raw Metrics (raw)"
      }
    ],
    "mcpServerDefinitionProviders": [
      {
        "id": "cytoscnpy-mcp",
        "label": "CytoScnPy Static Analyzer"
      }
    ],
    "configuration": {
      "title": "CytoScnPy Configuration",
      "properties": {
        "cytoscnpy.path": {
          "type": "string",
          "default": "",
          "description": "Path to the CytoScnPy executable. Leave empty to use bundled binary or pip-installed version."
        },
        "cytoscnpy.analysisMode": {
          "type": "string",
          "default": "workspace",
          "enum": [
            "workspace",
            "file"
          ],
          "enumDescriptions": [
            "Analyze entire workspace for accurate cross-file detection (recommended)",
            "Analyze only the current file for faster feedback (may have false positives)"
          ],
          "description": "Analysis mode: 'workspace' for full project analysis, 'file' for single-file analysis."
        },
        "cytoscnpy.enableSecretsScan": {
          "type": "boolean",
          "default": false,
          "description": "Enable scanning for hardcoded secrets."
        },
        "cytoscnpy.enableDangerScan": {
          "type": "boolean",
          "default": false,
          "description": "Enable scanning for dangerous code patterns."
        },
        "cytoscnpy.enableQualityScan": {
          "type": "boolean",
          "default": false,
          "description": "Enable scanning for code quality issues."
        },
        "cytoscnpy.enableCloneScan": {
          "type": "boolean",
          "default": false,
          "description": "Enable code clone detection to find duplicate/similar code blocks."
        },
        "cytoscnpy.confidenceThreshold": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum confidence level (0-100) of findings to report. Set to 0 to show all findings."
        },
        "cytoscnpy.excludeFolders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Folders to exclude from analysis (e.g., ['build', 'dist', '.venv'])."
        },
        "cytoscnpy.includeFolders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Folders to force-include in analysis (overrides default exclusions)."
        },
        "cytoscnpy.includeTests": {
          "type": "boolean",
          "default": false,
          "description": "Include test files in analysis."
        },
        "cytoscnpy.includeIpynb": {
          "type": "boolean",
          "default": false,
          "description": "Include Jupyter Notebooks (.ipynb files) in analysis."
        },
        "cytoscnpy.maxComplexity": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "description": "Maximum allowed Cyclomatic Complexity before flagging."
        },
        "cytoscnpy.minMaintainabilityIndex": {
          "type": "number",
          "default": 40,
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum Maintainability Index before flagging."
        },
        "cytoscnpy.maxNesting": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "description": "Maximum allowed nesting depth before flagging."
        },
        "cytoscnpy.maxArguments": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "description": "Maximum allowed function arguments before flagging."
        },
        "cytoscnpy.maxLines": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "description": "Maximum allowed function lines before flagging."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
